<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_compare"
    android:layout_width="340dp"
    android:layout_height="500dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="6dp"

    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="3dp"

    android:foreground="?attr/selectableItemBackground"

    card_view:cardUseCompatPadding="true">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="600dp"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/cp_image"
            android:src="@drawable/user3_pic"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/cp_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hau Yang"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/cp_image"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:id="@+id/img3"
            android:layout_below="@id/cp_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_work"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/cp_image"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/text3"
            android:layout_below="@id/cp_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="10sp"
            android:text="Mobile development passionate"
            android:layout_toRightOf="@+id/img3"
            android:layout_marginLeft="5dp"/>

        <ImageView
            android:id="@+id/img2"
            android:layout_below="@id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_pin"
            android:layout_toRightOf="@+id/cp_image"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Johor Bahru, Malaysia"
            android:layout_below="@id/text3"
            android:textSize="10sp"
            android:layout_toRightOf="@id/img2"
            android:layout_marginTop="10dp"

            />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">


        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            />


        <TextView
            android:id="@+id/posted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posted"
            android:layout_marginLeft="10dp"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginLeft="40dp"
            />

        <TextView
            android:id="@+id/completed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Completed"
            android:layout_marginLeft="10dp"
            android:textSize="10sp" />


        <TextView
            android:id="@+id/text6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="30sp"
            android:textStyle="bold"

            android:layout_marginLeft="40dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Review"
            android:layout_marginLeft="10dp"
            android:textSize="10sp" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#c0c0c0"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/select_runner_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Select as Runner"
            android:textSize="15dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/rounded_corner2"
            android:clickable="true" />

    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"
            android:layout_marginTop="5dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ABOUT"
        android:layout_marginTop="5dp"
        />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"
            android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/cp_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Man growing up in construction industry from childhood. Hard working person with lot of skills.\n\nI am fantastic with people and won't over promise and under deliver on a task. I am reliable and easy to get along, adaptable and can follow instructions accurately.\n\n I have experience in building and construction, landscaping and gardening, marketing, sales and media, telemarketing and computers and entertainment."
        android:layout_marginTop="10dp"
        android:textSize="13sp"
        android:gravity="left"/>

    </LinearLayout>
    </ScrollView>
</android.support.v7.widget.CardView>