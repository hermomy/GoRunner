<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_browse"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/rounded_corner3"
    android:foreground="?attr/selectableItemBackground"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/list_avatar_browse"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/user_pic" />

        <LinearLayout
            android:layout_width="178dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical|right">

        <TextView
            android:id="@+id/list_title_browse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/title"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="Android Material Design"/>



            <TextView
                android:id="@+id/location_browse"
                android:drawableLeft="@drawable/marker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textSize="10dp"
                android:text="Selangor"
                android:textColor="@color/time_comment"

               />

                <TextView
                    android:id="@+id/comment_browse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/time_comment"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textSize="10dp"
                    android:layout_marginTop="3dp"
                    android:text="5 Comments, 3 Offers" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <TextView
            android:id="@+id/list_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
                android:layout_toRightOf="@id/list_avatar_browse"
            android:textColor="@color/time_comment"
            android:ellipsize="end"
            android:singleLine="true"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="10dp"
                android:text="2 hours ago"
                android:gravity="right"
                android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/list_desc_browse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/list_avatar_browse"
            android:textColor="@color/primary"
            android:ellipsize="end"
            android:singleLine="true"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="RM100"

            android:layout_gravity="center_vertical" />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>