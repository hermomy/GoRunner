<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_mytask"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginBottom="8dp"
    android:background="#C5CAE9"
    android:foreground="?attr/selectableItemBackground"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">


    <TextView
        android:id="@+id/title_mytask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Graphic design work"
            android:textColor="@color/title"
        android:textSize="15dp"
        android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="120dp">


            <TextView
                android:id="@+id/location_mytask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/time_comment"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="10dp" android:layout_marginTop="2dp"
                android:drawableLeft="@drawable/marker"
            android:text="Selangor"

                android:gravity="center_vertical" />

            <!--<TextView-->
                <!--android:id="@+id/comment_mytask"-->
                <!--android:layout_marginTop="2dp"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="16dp"-->
                <!--android:textColor="#000000"-->
                <!--android:textAppearance="?attr/textAppearanceListItem"-->
                <!--android:textSize="10dp"-->
                <!--android:text="2 Comments, 3 Offers"/>-->

            <TextView
                android:id="@+id/date_mytask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 days ago"
                android:textSize="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="16dp"
                android:textColor="@color/time_comment"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/location_mytask" />
        </RelativeLayout>

</LinearLayout>


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/mytask_button"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:textColor="@color/white"
            android:text="VIEW OFFERS"
            android:background="#c20000"
            android:textSize="10sp"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</android.support.v7.widget.CardView>